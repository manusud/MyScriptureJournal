@page
@model MyScriptureJournal.Pages.Scriptures.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="color_1">Create</h1>

<h4 class="color_1">Journal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Journal.FavoriteScripture" class="control-label color_1"></label>
                <input asp-for="Journal.FavoriteScripture" class="form-control" />
                <span asp-validation-for="Journal.FavoriteScripture" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Journal.EditionDate" class="control-label color_1"></label>
                <input asp-for="Journal.EditionDate" class="form-control" type="text" placeholder="@DateTime.Now.ToShortDateString()" />
                <span asp-validation-for="Journal.EditionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Book" class="control-label color_1"></label>
                <input asp-for="Journal.Book" class="form-control" />
                <span asp-validation-for="Journal.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Notes" class="control-label color_1"></label>
                <input asp-for="Journal.Notes" class="form-control" />
                <span asp-validation-for="Journal.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
